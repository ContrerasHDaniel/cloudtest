<div class="jumbotron mt-4">
	<h1 class="display-4">Actualización</h1>
	<p class="lead"> Actualización de información de dispositivos</p>
	<hr class="my-4">
	<form id="submit" action="">
		<div class="form-row">
			<div class="form-group col-md-6">
				<label>Zona</label>
				<select id="zonaSelect" class="form-control" onchange="getDevices(this.value)"> 
					<option value="0">Selecciona una zona</option>
					{{getZonas zonas}}
				</select>
			</div>
			<div class="form-group col-md-6">
				<label for="idSelect">ID</label>
				<select id="idSelect" class="form-control" onchange="getID(this.value)">
                    <option value="0">Selecciona un dispositivo</option>
                </select>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Editar</button>
	</form>
</div>
 
<script type='text/javascript' src='/js/getDevices.js'></script>