<!-- Login CSS -->
<link rel="stylesheet" href="/css/login.css">
{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if user}}
<!-- redirect to index -->
<meta http-equiv="Refresh" content="0; url=/monitoreo" />
{{else}}
<div class="container container-login">
    <div class="wrap-login">
        <div class="login-form-title">
            <span class="login-form-title-1">Sign In</span>
        </div>
        <form id="login-form" class="login-form validate-form" action="/users/signin" method="POST">
            <div class="wrap-input validate-input m-b-26" data-validate="Se requiere el email">
                <span class="label-input">Email:</span>
                <input class="input-form" type="text" name="email" placeholder="Ingresa tu email">
                <span class="focus-input"></span>
            </div>
            <div class="wrap-input validate-input m-b-18" data-validate="Se requiere el email">
                <span class="label-input">Contraseña:</span>
                <input class="input-form" type="password" name="password" placeholder="Ingresa tu contraseña">
                <span class="focus-input"></span>
            </div>
            <div class="flex-sb-m w-full p-b-30">
                <a class="txt1" href="#">Recuperar contraseña</a>
            </div>
            <div class="container-from-login-form-button">
                <button class="login-form-button">Entrar</button>
            </div>
        </form>
    </div>
</div>
{{/if}}