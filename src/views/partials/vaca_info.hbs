 <!-- The Modal -->
  <div class="modal fade" id="updateModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4  id="modal-title" class="modal-title">Información de </h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true"><i class="far fa-times-circle"></i></span>
				</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
            <img class="img-responsive" src="https://i.imgur.com/QQLuAQd.jpg">
            <div class="row">
                <div class="col-xs-6 form-group mx-3">
                    <label>Alias</label>
                    <input id="modal-alias" class="form-control" type="text"/>
                </div>
                <div class="col-xs-6 ml-auto mr-4">
                    <div class="form-group left-column">
                        <label>Sexo</label>
                        <select id="modal-genre" class="browser-default custom-select">
                            <option value="f">F</option>
                            <option value="m">M</option>
                        </select>
                    </div>
                    <div class="form-group right-column mx-4">
                        <label>Preñada</label>
                        <select id="modal-calf" class="browser-default custom-select">
                            <option value="n">No</option>
                            <option value="y">Sí</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group mx-3">
                    <label>Raza</label>
                    <select id="selectBreed" class="browser-default custom-select">
                        <option value="Romagnola">Romagnola</option>
                        <option value="Nelore">Nelore</option>
                        <option value="Limousine">Limousine</option>
                        <option value="Holstein">Holstein</option>
                        <option value="Otra">Otra</option>
                    </select>
                </div>
                <div class="col-xs-6 form-group mr-4 ml-auto">
                    <div class="form-group left-column-txt">
                        <label>Edad</label>
                        <input id="modal-age" type="text" class="form-control">
                    </div>
                    <div class="form-group right-column-txt mx-4">
                        <label>Peso</label>
                        <input id="modal-weight" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group mx-3">
                    <label>Tipo</label>
                    <input id="modal-type" class="form-control" type="text"/>
                </div>
                <div class="col-xs-6 form-group mr-3 ml-auto">
                    <label>Fierro</label>
                    <input id="modal-iron" class="form-control" type="text"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group mx-3">
                    <label>Vacunas</label>
                    <textarea id="modal-vaccs" rows="5" class="form-control">
                    </textarea>
                </div>
                <div class="col-xs-6 form-group mr-3 ml-auto">
                    <label>Señas particulares</label>
                    <textarea id="modal-details" rows="5" class="form-control">
                    </textarea>
                </div>
            </div>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
            <button type="button" id="submitBtn" class="btn btn-info">Editar perfil</button>
            <button type="button" class="btn btn-primary">Imprimir perfil</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
  </div>