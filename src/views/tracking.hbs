<div class="container">
  <div class="row text-center">
    <div class="col-sm-3">
      <div>
        <label for="zonaSelect"><span class="control-label badge badge-light">Seleccione una Zona</span></label>
      </div>
      <div>
        <select id="zonaSelect" class="custom-select">
          {{#each zonas}}
          <option>{{ nombre }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="col-sm-9">
      <div id="map">
	      <input type="hidden" id="lat" value="{{lat}}">
	      <input type="hidden" id="lng" value="{{lng}}">
      </div>
    </div>
  </div>
</div> 

<script type='text/javascript' src='js/map.js'></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC5Jx2pqC6kJCEmSP_1yoVdGmvr6HZUJSI&callback=initMap" async defer></script>